<%- include('./partials/header') %>
<div class="login container">
  <div class="Registertitle">
    <i class="fas fa-sign-in-alt fa-2x"></i>
    <h1 style="display: inline; text-align: center">Login</h1>
  </div>
  <form action="http://localhost:3000/api/login" method="post" id="login-form">
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        name="email"
        class="form-control"
        id="email"
        aria-describedby="emailHelp"
        placeholder="Enter email"
      />

      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        class="form-control"
        id="password"
        placeholder="*********"
      />
    </div>
    <button type="submit" class="btn btn-primary ml-2" style="width: 100%">
      Login
    </button>
  </form>
  <p>
    Forgot Password ?
    <span style="color: red"
      ><a href="/api/users/send-otp">Reset Password</a></span
    >
  </p>
  <p>
    Don't have an account?
    <span><a href="/api/users" style="color: red">Register</a></span>
  </p>
</div>

<%- include('./partials/footer') %>
